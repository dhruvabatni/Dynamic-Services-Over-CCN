<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/controllerTitle" android:layout_gravity="center" android:layout_marginTop="5px" android:layout_marginBottom="5px" android:textSize="10pt"></TextView>


<Button android:layout_height="wrap_content" android:id="@+id/allStartButton" android:text="@string/allStartButton" android:layout_width="fill_parent" android:layout_marginTop="10px" android:layout_marginBottom="10px"></Button>
<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ccndStatusLabel" android:textSize="8pt" android:layout_marginRight="3px"></TextView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tvCcndStatus" android:textSize="9pt"></TextView></LinearLayout>


<LinearLayout android:id="@+id/LinearLayout02" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/repoStatusLabel" android:textSize="8pt" android:layout_marginRight="3px"></TextView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tvRepoStatus" android:textSize="9pt"></TextView></LinearLayout>


</LinearLayout>
