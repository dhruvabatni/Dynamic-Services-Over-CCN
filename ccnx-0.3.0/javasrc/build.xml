	<target name="generate-repotest-zip" depends="jar, ccnd, test-repo-structure">
	    <delete file="${repozip}"/>
		<zip destfile="${repozip}"
		    basedir="${REPO_ROOT}"
		    update="true">
		 </zip>
		<delete dir="${REPO_ROOT}" />
	</target>
	
