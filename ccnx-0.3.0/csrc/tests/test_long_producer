AFTER : test_single_ccnd
BEFORE : test_single_ccnd_teardown
type jot || SkipTest no jot available
NAME=ccnx:/test/long/jot
jot $LONG_LINES | ccnsendchunks -x 300 $NAME &
echo Long producer started
